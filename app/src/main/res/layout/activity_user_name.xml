<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/head_include" android:id="@+id/head_view"/>
    <TextView
        android:id="@id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:text="昵称"
        android:layout_below="@id/head_view"
        android:textColor="@color/gray" />

    <EditText
        android:id="@id/text_nickName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_toRightOf="@id/tv_hint"
        android:background="@null"
        android:gravity="center_vertical"
        android:layout_alignTop="@id/tv_hint"
        android:hint="@string/wright_nickname"
        android:singleLine="true"
        android:textColor="@color/dark_black"
        android:textColorHint="@color/gray"
        android:textSize="14.0sp" />

    <View
        android:id="@+id/line"
        style="@style/hr_gray_line"
        android:layout_below="@id/text_nickName"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:text="@string/nickname_info"
        android:textColor="@color/dark_gray"
        android:textSize="14.0sp" />
</RelativeLayout>