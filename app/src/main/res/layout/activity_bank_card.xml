<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/head_include" android:id="@+id/head_view"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bankcard_str"
        android:background="#FADAA1"
        android:textColor="#C4A168"
        android:textSize="@dimen/sp_11sp"
        android:padding="@dimen/dimen_15dp"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50dp"
                android:text="姓名"
                android:id="@+id/tvName"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <EditText
                android:id="@id/text_nickName"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_50dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入姓名"
                android:singleLine="true"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/sp_14sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@+id/etIdCard"
                app:layout_constraintEnd_toEndOf="@+id/etIdCard"/>
            <View
                style="@style/hr_gray_line"
                android:id="@+id/line1"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50dp"
                android:text="身份证号"
                android:id="@+id/tvIdCard"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_15dp"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <EditText
                android:id="@+id/etIdCard"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入身份证号"
                android:singleLine="true"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/sp_14sp"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                app:layout_constraintLeft_toRightOf="@id/tvIdCard"
                app:layout_constraintRight_toRightOf="parent"/>
            <View
                style="@style/hr_gray_line"
                android:id="@+id/line2"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                app:layout_constraintTop_toBottomOf="@id/tvIdCard"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50dp"
                android:text="银行卡号"
                android:id="@+id/tvBankCard"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_15dp"
                app:layout_constraintTop_toBottomOf="@id/tvIdCard"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <EditText
                android:id="@+id/etBankCard"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_50dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入银行卡号"
                android:singleLine="true"
                android:inputType="number"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/sp_14sp"
                app:layout_constraintTop_toBottomOf="@id/tvIdCard"
                app:layout_constraintStart_toStartOf="@id/etIdCard"
                app:layout_constraintEnd_toEndOf="@id/etIdCard"/>
            <View
                style="@style/hr_gray_line"
                android:id="@+id/line3"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                app:layout_constraintTop_toBottomOf="@id/tvBankCard"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50dp"
                android:text="银行类型"
                android:id="@+id/tvBankType"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_15dp"
                app:layout_constraintTop_toBottomOf="@id/tvBankCard"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/etBankType"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_50dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="自动识别"
                android:singleLine="true"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/sp_14sp"
                app:layout_constraintTop_toBottomOf="@id/tvBankCard"
                app:layout_constraintStart_toStartOf="@id/etIdCard"
                app:layout_constraintEnd_toEndOf="@id/etIdCard"/>
            <View
                style="@style/hr_gray_line"
                android:id="@+id/line4"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                app:layout_constraintTop_toBottomOf="@id/tvBankType"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50dp"
                android:text="手机号"
                android:id="@+id/tvPhone"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_15dp"
                app:layout_constraintTop_toBottomOf="@id/tvBankType"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <EditText
                android:id="@+id/etPhone"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_50dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:singleLine="true"
                android:inputType="number"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/sp_14sp"
                app:layout_constraintTop_toBottomOf="@id/tvBankType"
                app:layout_constraintStart_toStartOf="@id/etIdCard"
                app:layout_constraintEnd_toEndOf="@id/etIdCard"/>
            <View
                style="@style/hr_gray_line"
                android:id="@+id/line5"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                app:layout_constraintTop_toBottomOf="@id/tvPhone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50dp"
                android:text="验证码"
                android:id="@+id/tvCode"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_15dp"
                app:layout_constraintTop_toBottomOf="@id/tvPhone"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <EditText
                android:id="@+id/etCode"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_50dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:singleLine="true"
                android:inputType="number"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/sp_14sp"
                app:layout_constraintTop_toBottomOf="@id/tvPhone"
                app:layout_constraintStart_toStartOf="@id/etIdCard"
                app:layout_constraintEnd_toStartOf="@+id/btn_get_code"/>
            <View
                style="@style/hr_gray_line"
                android:id="@+id/line6"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                app:layout_constraintTop_toBottomOf="@id/tvCode"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <Button
                android:id="@+id/btn_get_code"
                style="?android:borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:text="获取验证码"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_16sp"
                app:layout_constraintTop_toBottomOf="@id/tvPhone"
                app:layout_constraintStart_toEndOf="@id/etCode"
                app:layout_constraintEnd_toEndOf="@id/etIdCard"/>
            <Button
                android:id="@+id/btn_register"
                style="?android:borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:layout_marginTop="@dimen/dimen_50dp"
                android:layout_marginRight="@dimen/dimen_30dp"
                android:background="@mipmap/login_uncheck_bg"
                android:clickable="false"
                android:enabled="false"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20sp"
                app:layout_constraintTop_toBottomOf="@id/tvCode"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>