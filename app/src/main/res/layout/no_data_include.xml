<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nodata_view"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/no_diamond_image"
        android:layout_width="@dimen/dimen_150dp"
        android:layout_height="@dimen/dimen_150dp"
        android:src="@mipmap/no_task"
        />
    <TextView
        android:id="@+id/no_diamond_text"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_70dp"
        android:layout_marginLeft="@dimen/dimen_70dp"
        android:gravity="center"
        android:text="暂无任务"
        android:textColor="#999999"
        android:textSize="@dimen/sp_16sp"/>
    <TextView
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:gravity="center"
        android:id="@+id/tv_load"
        android:background="@drawable/load_data"
        android:text="重新加载"
        android:textColor="@color/bar_grey"
        android:textSize="@dimen/sp_16sp"/>
</LinearLayout>