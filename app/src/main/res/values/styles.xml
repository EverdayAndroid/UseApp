<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <!--状态栏占位 -->
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="customDialog" parent="Theme.AppCompat.Dialog">
        <!-- 是否显示昏暗背景 -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="customDialog1" parent="Theme.AppCompat.Dialog">
        <!-- 是否显示昏暗背景 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="hr_gray_line">
        <item name="android:background">@color/low_gray_one</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="item_arrow_style">
        <item name="android:layout_gravity">center|right</item>
        <item name="android:background">@mipmap/icon_user_arrow</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">15.0dip</item>
    </style>

    <style name="item_text_style">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/dark_black</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>


    <style name="stand_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dimen_15dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_15dp</item>
    </style>

    <style name="gray_content">
        <item name="android:textSize">@dimen/sp_14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginLeft">@dimen/dimen_20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="black_content">
        <item name="android:textSize">@dimen/sp_14sp</item>
        <item name="android:textColor">@color/dark_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="item_layout_style">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_55dp</item>
    </style>

    <style name="hr_gray_line_margin">
        <item name="android:background">@color/low_gray_one</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2.0px</item>
        <item name="android:layout_marginLeft">@dimen/dimen_15dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_15dp</item>
    </style>

    <!--dialog弹出，进入动画-->
    <style name="dialog_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        //进入时的动画
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
        //退出时的动画
    </style>
    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
